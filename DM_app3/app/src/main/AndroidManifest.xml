    <application
        android:name=".Util.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Activites.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Activites.MovieDetailsActivity" >
        </activity>
        <activity
            android:name=".Activites.ActorDetailActivity"
            android:theme="@style/NoAction"
            android:label="">
        </activity>
        <activity
            android:name=".Activites.CastActivity"
            android:label="@string/cast_string" >
        </activity>
    </application>

</manifest>
